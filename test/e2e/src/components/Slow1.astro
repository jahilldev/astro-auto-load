---
import { getLoaderData } from 'astro-auto-load/runtime';

export const loader = async () => {
  const start = Date.now();
  await new Promise((resolve) => setTimeout(resolve, 100));
  const duration = Date.now() - start;
  return { component: 'Slow1', start, duration };
};

const data = await getLoaderData<typeof loader>();
---

<div data-component="slow1" data-start={data.start} data-duration={data.duration}>
  Slow1: {data.duration}ms (Start: {data.start})
</div>
