---
// Traditional async component - NO loader, uses direct await
const start = Date.now();
await new Promise((resolve) => setTimeout(resolve, 50));
const duration = Date.now() - start;
const data = { component: 'StandardSlotGrandchild', start, duration };
---

<div class="standard-slot-grandchild" data-start={data.start} data-duration={data.duration}>
  <h5>Standard Slot Grandchild (took {data.duration}ms)</h5>
</div>
