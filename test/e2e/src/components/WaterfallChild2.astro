---
import WaterfallChild1 from './WaterfallChild1.astro';

// Traditional Astro async component - awaits data in frontmatter
const start = Date.now();
await new Promise(resolve => setTimeout(resolve, 100));
const duration = Date.now() - start;
---

<div class="waterfall-child2" data-start={start} data-duration={duration}>
  Waterfall Child 2 (took {duration}ms)
  <WaterfallChild1 />
</div>
