---
// Standard async component pattern - causes waterfall
const start = Date.now();
await new Promise((resolve) => setTimeout(resolve, 100));
const duration = Date.now() - start;
const data = { component: 'StandardSlow1', start, duration };
---

<div data-component="standard-slow1" data-start={data.start} data-duration={data.duration}>
  StandardSlow1: {data.duration}ms (Start: {data.start})
</div>
