---
// Standard async component (no loader) - for comparison tests
// Props: name, className
// Always uses 50ms delay (use StandardComponent100 for 100ms)
const { name = 'StandardComponent', className = 'standard-component' } = Astro.props;

const start = Date.now();
await new Promise((resolve) => setTimeout(resolve, 50));
const duration = Date.now() - start;
---

<div class={className} data-component={name.toLowerCase()} data-start={start} data-duration={duration}>
  <p>{name}: standard async, took {duration}ms</p>
  <slot />
</div>
