{
  "name": "astro-auto-load",
  "version": "0.3.0",
  "description": "Automatic component-level loaders for Astro SSR (parallel, deduped, plug-and-play).",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime.d.ts",
      "import": "./dist/runtime.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "import": "./dist/middleware.js"
    },
    "./augment": {
      "types": "./src/augment.d.ts"
    }
  },
  "files": [
    "dist",
    "src/augment.d.ts"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:e2e": "vitest run test/e2e.test.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "astro",
    "astro-integration",
    "ssr",
    "data-loading",
    "loader"
  ],
  "author": "James Hill",
  "license": "MIT",
  "peerDependencies": {
    "astro": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "astro": "^5.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
